# Discord Bot Configuration
# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Bot Owner Configuration
# Your Discord user ID - used for admin commands and default guild settings
BOT_OWNER_ID=your_discord_user_id_here

# MongoDB Configuration
# MongoDB connection URI for database operations
# Format: mongodb://username:password@host:port/database
# Example: mongodb://admin:password@localhost:27017/stygian_relay
MONGODB_URI=mongodb://localhost:27017/stygian_relay

# Email Configuration for Error Reporting
# Email address for sending error notifications
EMAIL=your_email@example.com

# Email password or app-specific password
PASSWORD=your_email_password_here

# Discord Logging Configuration
# Channel ID where error logs should be sent
LOG_CHANNEL_ID=your_log_channel_id_here

# Optional: Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Optional: Health Check Debug Mode
# Set to true to enable verbose health check logging
HEALTHCHECK_DEBUG=true
